  "repository": "github:knuhol/dkdb-fe",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "bestzip": "^2.1.5",
    "bootstrap": "^4.4.1",
    "chalk": "^3.0.0",
    "concurrently": "^5.0.2",
    "conventional-commits-parser": "^3.0.8",
    "cz-conventional-changelog": "^3.0.2",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "git-cz": "^3.3.0",
    "husky": "^3.1.0",
    "json-server": "^0.15.1",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "rimraf": "^3.0.0",
    "semantic-release-cli": "^5.2.3",
    "standard-version": "^7.0.1"
  },
  "scripts": {
    "dev-server": "react-scripts start",
    "start": "concurrently -k -n dev-server,api-mock \"npm:dev-server\" \"npm:api-mock\"",
    "build": "react-scripts build",
    "bundle": "npm run clean && npm run build && npm run zip",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "npm run test -- --watchAll=true",
    "test:coverage": "npm run test -- --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext js",
    "commit": "git-cz",
    "clean": "rimraf build dist",
    "pipeline:build": "npm run build",
    "pipeline:test": "npm run lint && npm run test:coverage",
    "release": "npm run bundle && standard-version",
    "release:beta": "npm run release -- -p beta",
    "zip": "mkdir dist && bestzip dist/bundle.zip build/*",
    "api-mock": "json-server --watch api-mock/books.json --routes api-mock/routes.json -p 3001"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
